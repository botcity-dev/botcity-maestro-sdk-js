{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
      "lib": [ "es2015", "dom"  ],
      "declaration": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "esModuleInterop": true,
      "experimentalDecorators": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"]
  }